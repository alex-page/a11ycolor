{
	"name": "a11ycolor",
	"version": "1.0.0",
	"description": "Generate the nearest accessible color.",
	"scripts": {
		"build": "babel src --out-dir dist --presets=env --sourcemaps",
		"test": "jest",
		"test:detail": "jest --coverage",
		"test:watch": "jest --watch --coverage"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-page/a11ycolor.git"
	},
	"keywords": [
		"accessible",
		"colour",
		"color"
	],
	"main": "./dist/a11y.js",
	"author": {
		"name": "Alex Page",
		"email": "alex@alexpage.com.au",
		"url": "http://alexpage.com.au"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "hi@dominik-wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		},
		{
			"name": "Trevor Brennan",
			"email": "t@trevorbrennan.com",
			"url": "http://trevorbrennan.com/"
		},
		{
			"name": "Alex Page",
			"email": "alex@alexpage.com.au",
			"url": "http://alexpage.com.au"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alex-page/a11ycolor/issues"
	},
	"devDependencies": {
		"jest-cli": "^21.2.1",
		"nodemon": "^1.12.2"
	},
	"dependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"color": "^2.0.1"
	},
	"jest": {
		"testEnvironment": "node",
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"src/*.js"
		],
		"roots": [
			"./__tests__/unit/"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	}
}
